generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////
// COMPANY INFO
////////////////////////
model CompanyInfo {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  vision      String
  mission     String
  email       String
  phone       String
  address     String
}

////////////////////////
// SERVICES
////////////////////////
model Service {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  icon        String?
  projects    Project[]
}

////////////////////////
// PROJECTS
////////////////////////
model Project {
  id          Int            @id @default(autoincrement())
  title       String
  description String
  year        Int
  clientName  String?
  serviceId   Int
  service     Service        @relation(fields: [serviceId], references: [id])
  images      ProjectImage[]
  createdAt   DateTime       @default(now())
}

////////////////////////
// PROJECT IMAGES
////////////////////////
model ProjectImage {
  id        Int     @id @default(autoincrement())
  imageUrl  String
  projectId Int
  project   Project @relation(fields: [projectId], references: [id])
}

////////////////////////
// PARTNERS (LOGOS)
////////////////////////
model Partner {
  id      Int    @id @default(autoincrement())
  name    String
  logoUrl String
}

////////////////////////
// STATISTICS (COUNTERS)
////////////////////////
model Statistic {
  id    Int    @id @default(autoincrement())
  label String
  value Int
}

////////////////////////
// WORKFLOW
////////////////////////
model WorkflowStep {
  id          Int    @id @default(autoincrement())
  stepNumber  Int
  title       String
  description String
}

////////////////////////
// CAREERS
////////////////////////
model Career {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  type        String      // Full-time / Internship
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
}
